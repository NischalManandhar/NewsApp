<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TvHeadline">
        <item name="android:ellipsize">end</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textColor">@color/colorHeadline</item>
        <item name="android:textSize">@dimen/txt_body_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvAbstract">
        <item name="android:ellipsize">end</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textColor">@color/colorHeadline</item>
        <item name="android:textSize">@dimen/txt_body_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TvByLine">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textColor">@color/colorByLine</item>
        <item name="android:textSize">@dimen/txt_body_normal</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TvTimestamp">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textColor">@color/colorByLine</item>
        <item name="android:textSize">@dimen/txt_body_normal</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>